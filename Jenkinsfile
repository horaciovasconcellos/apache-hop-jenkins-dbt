pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Compilando o projeto...'
            }
        }
        stage('Test') {
            steps {
                echo 'Executando testes...'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Publicando em produção (simulado)...'
            }
        }
    }
}
